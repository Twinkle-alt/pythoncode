---
- name: Install Apache2
  apt:
    name: "{{ httpd_package_name }}"
    state: present
    update_cache: yes
  become: true

- name: Place custom HTML File
  copy:
    src: index.html
    dest: /var/www/html/index.html
  become: true

- name: Start Apache2 service
  service:
    name: "{{ httpd_package_name }}"
    state: started
    enabled: yes
  become: true
